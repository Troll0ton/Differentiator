void choose_mode ()
{
    printf ("CHOOSE THE MODE:\n\
            0 - calc function in point;\n\
            1 - calc derivative\n\
            2 - calc derivative in point \n");

    int sym = 0;

    scanf ("%d", &sym);
    
    switch(sym)
    {
        case CALC_POINT:
            guessing_mode (Info);
            break;
        case CALC_DERIV:
            searching_mode (Info);
            break;
        case CALC_DERIV_POINT:
            comparison_mode (Info);
            break;
        default:
            speak_and_print ("MODE DOES NOT EXIST!\n");
            break;
    }
}

